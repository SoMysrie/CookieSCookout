package application ;

import javafx.event.ActionEvent;

public class MyButtons 
{
	Main app = new Main() ;
	
    /**
     * 
     * @param e
     */
    public void handleButtonAction( ActionEvent e ) 
    {
        int count = 0 ;
        String choices = "" ;
        if( app.chkmarmiton.isSelected() )
        {
            count++ ;
            choices += "- " + app.chkmarmiton.getText() + "\n" ;
        }
        if( app.chkcuisineaz.isSelected( ) )
        {
            count++;
            choices += "- " + app.chkcuisineaz.getText() + "\n" ;
        }
        if( app.chkaufeminin.isSelected( ) )
        {
            count++;
            choices += "- " + app.chkaufeminin.getText() + "\n" ;
        }
        if( app.chkbdd.isSelected( ) )
        {
            count++;
            choices += "- " + app.chkbdd.getText() + "\n" ;
        }
        if( app.chklocal.isSelected( ) )
        {
            count++;
            choices += "- " + app.chklocal.getText() + "\n" ;
        }
        if (count == 0 )
        {
        	app.lbltotal.setText( "Website chosen: 0" ) ;
        	app.lbllist.setText( "None" ) ;
        }
        app.lbltotal.setText( "Websites chosen: " + count ) ;
        app.lbllist.setText( choices ) ;
     } ;
     
     
} ;
