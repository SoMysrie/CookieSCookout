package application;

import javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.event.Event;
import javafx.event.EventHandler;
import javafx.geometry.Insets;
import javafx.geometry.Pos;
import javafx.stage.Stage;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.Menu;
import javafx.scene.control.MenuBar;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.VBox;
import javafx.scene.paint.Color;
import javafx.scene.text.Font;
import javafx.scene.text.FontWeight;
import java.util.AbstractMap.SimpleEntry;
import java.util.Map.Entry;
import javafx.scene.control.*;
import javafx.scene.effect.DropShadow;
import javafx.scene.effect.Effect;
import javafx.scene.effect.Glow;
import javafx.scene.effect.SepiaTone;
import javafx.scene.image.Image;


public class Main extends Application {
	@Override
	public void start(Stage primaryStage) {
		
		primaryStage.setTitle("CookiesCookout");
		Scene scene = new Scene(new VBox(), 400, 350);
	    scene.setFill(Color.OLDLACE);
	    
	    final MenuBar menuBar = new MenuBar(); 
	    final BorderPane root = new BorderPane(); 
	    root.setTop(menuBar);
	 
	    Label menuLabel = new Label( "Mon label" ) ;
	    
	    menuLabel.setOnMouseClicked(new EventHandler<Event>() {
			@Override
			public void handle(Event event) {
				System.out.println("Sisi");
			}
		});
	    
	    
	    
	    final Menu menuHome = new Menu("Home");
	    final Menu menuFile = new Menu("File");
	    final Menu menuPlugin = new Menu("Plugin");
	    final Menu menuHelp = new Menu("Help");
	 
	    menuHome.setOnAction(actionEvent ->  System.out.println("Salut le monde !"));
	    
	    menuBar.getMenus().addAll(menuHome, menuFile, menuPlugin, menuHelp);
	    
	    ((VBox) scene.getRoot()).getChildren().addAll(menuBar);
	    primaryStage.setScene(scene);
		primaryStage.show();
	}
	
	public static void main(String[] args) {
		launch(args);
	}
}
